import Default from '@astrojs/starlight/components/SocialIcons.astro';

async function latestVersion(packageName: string) {
  try {
    const response = await fetch(`https://registry.npmjs.org/${packageName}/latest`);
    if (!response.ok) {
      console.error(`Failed to fetch package info: ${response.status}`);
      return 'unknown';
    }
    const data = await response.json();
    return `v${data.version}`;
  } catch (error) {
    console.error(`Error fetching version for ${packageName}:`, error);
    return 'unknown';
  }
}

const packageName = 'ngx-formbar';
const lastVersion = await latestVersion(packageName);
---
<span>Latest: {lastVersion}</span>
